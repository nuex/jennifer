#!/bin/sh
#
# jen-internal: Functions and variables shared by all scripts
#

__jen_error() {
  echo -e ">>> ERROR: $*" >&2
  exit 1
}

__jen_template_dir="$HOME/.jen"

[ ! "$JEN_LIBDIR" ] &&
  __jen_error "Cannot find jennifer awk libraries. Please set \$JEN_LIBDIR."

__jen_awklib_dir="$JEN_LIBDIR"
